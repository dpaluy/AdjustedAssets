!!! 5
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Adjusted Assets"
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    = stylesheet_link_tag :application, params[:controller]
    = javascript_include_tag :application, params[:controller]
    = csrf_meta_tags
    = yield(:head)
  
  %body{:class => params[:controller]}
    .topbar
      .fill
        .container
          = link_to "Adjusted Assets", root_path, :class => 'brand'
          
          = render 'shared/navigation'
            
    .container
      .content
        .page-header
          - if show_title?
            %h1= content_for?(:title) ? yield(:title) : ""
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
        .row          
          .span14
            = yield
      %footer
        %p Copyright &copy; 2010, Ezov Creative Solution LTD.        
        
